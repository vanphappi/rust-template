# ===============================================
# ADVANCED API TEMPLATE CONFIGURATION v2.0
# ===============================================

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=4

# Application
APP_NAME=API Management SE
ENVIRONMENT=development

# Logging & Tracing
RUST_LOG=info,actix_web=debug,sqlx=warn

# Database (PostgreSQL)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/api_db
DATABASE_MAX_CONNECTIONS=10

# Redis (Cache & Rate Limiting)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production-use-strong-random-string
JWT_EXPIRATION_HOURS=24

# Security
# HTTPS_ENABLED=false
# SSL_CERT_PATH=./certs/cert.pem
# SSL_KEY_PATH=./certs/key.pem

# Rate Limiting
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_BURST=10

# Monitoring
# METRICS_ENABLED=true
# TRACING_ENABLED=true
